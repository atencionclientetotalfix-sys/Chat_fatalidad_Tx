{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1",
      "NODE_VERSION": "20"
    }
  },
  "functions": {
    "app/api/chat/route.ts": {
      "maxDuration": 120,
      "memory": 1024
    },
    "app/api/upload/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "app/api/chat/export/route.ts": {
      "maxDuration": 60,
      "memory": 1024
    },
    "app/api/chat/thread/route.ts": {
      "maxDuration": 30
    },
    "app/api/chat/mensajes/route.ts": {
      "maxDuration": 30
    },
    "app/api/chat/conversacion/[id]/route.ts": {
      "maxDuration": 30
    },
    "app/api/auth/verify-email/route.ts": {
      "maxDuration": 30
    }
  }
}

